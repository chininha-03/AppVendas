@model IEnumerable<AppVendasWeb.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-5 text-light my-5">Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-light d-inline-flex align-items-center">
        <svg class="me-3" bootstrap-icon="PlusLg" width="16" height="16" aria-label="Alarms"></svg>Adicionar
    </a>
</p>


<div class="table-responsive">
    <table class="table table-hover" style="background-color: #8D7B68; color:white; border-radius: 7px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataVenda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotaFiscal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NotaFiscal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.CPF)
                    </td>
                    <td class="text-end">
                        <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.VendaId">
                            <svg class="mx-2" bootstrap-icon="PencilFill" width="16" height="16" aria-label="Alarms"></svg>
                        </a> |
                        <a class="btn btn-light" asp-action="Details" asp-route-id="@item.VendaId">
                            <svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Alarms"></svg>
                        </a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VendaId">
                            <svg class="mx-2" bootstrap-icon="Trash" width="16" height="16" aria-label="Alarms"></svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
