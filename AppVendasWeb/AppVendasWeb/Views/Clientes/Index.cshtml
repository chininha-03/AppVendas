@model IEnumerable<AppVendasWeb.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-5 text-light my-5">Cadastro: Novo Cliente</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-light d-inline-flex align-items-center">
        <svg class="me-3" bootstrap-icon="PlusLg" width="16" height="16" aria-label="Alarms"></svg>Adicionar
    </a>
</p>

<div class="table-responsive">


    <table class="table  table-hover" style="background-color: #8D7B68; color:white; border-radius: 7px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroAtivo)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody style="color:white;">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CadastroAtivo)
                    </td>
                    <td class="text-end">
                        <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="PencilFill" width="16" height="16" aria-label="Alarms"></svg>
                        </a> |
                        <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="CardList" width="16" height="16" aria-label="Alarms"></svg>
                        </a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId">
                            <svg class="mx-2" bootstrap-icon="Trash" width="16" height="16" aria-label="Alarms"></svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
