@model AppVendasWeb.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label class="control-label">Nome da Categoria</label>
                <input asp-for="CategoriaName" class="form-control" />
                <span asp-validation-for="CategoriaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success align-items-center mt-2">
                    <svg bootstrap-icon="Floppy" width="13" height="13" aria-label="ArrowLeft"></svg>
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="btn btn-outline-secondary mt-2 align-items-sm-center text-uppercase ">
    <a asp-action="Index" class="text-decoration-none text-white"> <svg bootstrap-icon="ArrowLeft" width="15" height="15" aria-label="ArrowLeft"></svg> Retornar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
